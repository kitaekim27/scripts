[ -e "${HOME}/.local/bin" ] && PATH="${PATH}:${HOME}/.local/bin"
[ -e "${HOME}/bin" ] && PATH="${PATH}:${HOME}/bin"

if shopt -q login_shell
then
    [ -n "${BASH_VERSION}" ] && [ -f "${HOME}/.bashrc" ] && source "${HOME}/.bashrc"
    [ -t 0 ] && [ "$(tty)" = /dev/tty1 ] && [ -z "${DISPLAY}" ] && exec startx
else
    exit 1
fi
